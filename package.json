{
  "name": "@openeagle/vue-component-template",
  "version": "1.0.0",
  "license": "MIT",
  "main": "./lib/index.js",
  "module": "./es/index.js",
  "types": "./es/index.d.ts",
  "files": [
    "es",
    "lib"
  ],
  "scripts": {
    "prepare": "husky install",
    "lint:js": "eslint \"./**/*.{js,ts,tsx,vue}\"",
    "lint:css": "stylelint --allow-empty-input \"./**/*.(css|less|scss|vue)\"",
    "lint": "npm run lint:js && npm run lint:css",
    "format:js": "eslint --fix \"./**/*.{js,ts,tsx,vue}\"",
    "format:css": "stylelint --fix --allow-empty-input \"./**/*.(css|less|scss|vue)\"",
    "format": "npm run format:js && npm run format:css",
    "pre-commit": "lint-staged",
    "dev": "vite",
    "build": "npm run build:commonjs && npm run build:esmodule",
    "build:commonjs": "rimraf ./lib && babel -D --env-name commonjs -x .ts,.tsx ./src -d ./lib && cross-env NODE_ENV=production tsc --project tsconfig.types.json --outDir lib",
    "build:esmodule": "rimraf ./es && babel -D --env-name esmodule -x .ts,.tsx ./src -d ./es && cross-env NODE_ENV=production tsc --project tsconfig.types.json --outDir es",
    "release": "npm run build && semantic-release"
  },
  "lint-staged": {
    "*.{vue,ts,tsx,js,jsx}": "eslint --fix",
    "*.{vue,css,less,sass,scss}": "stylelint --fix"
  },
  "peerDependencies": {
    "vue": "^3.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.8",
    "@babel/plugin-proposal-export-default-from": "^7.16.7",
    "@babel/plugin-proposal-export-namespace-from": "^7.16.7",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@openeagle/eslint-config-vue": "^1.0.1",
    "@openeagle/prettier-config": "^1.0.1",
    "@openeagle/stylelint-config": "^1.0.2",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@vitejs/plugin-vue": "^2.3.0",
    "@vitejs/plugin-vue-jsx": "^1.3.9",
    "@vue/babel-plugin-jsx": "^1.1.1",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^4.0.0",
    "eslint": "^8.0.0",
    "husky": "^7.0.1",
    "less": "^4.1.2",
    "lint-staged": "^12.0.0",
    "prettier": "^2.0.0",
    "rimraf": "^3.0.2",
    "semantic-release": "^17.4.1",
    "stylelint": "^14.0.0",
    "typescript": "^4.6.0",
    "vite": "^2.9.0",
    "vue": "^3.2.25"
  }
}
